@page "/"
@page "/search/{searchText}"
@page "/{cateogryUrl}"

@using Klavelvet.Client.Services.ProductService;
@inject IProductService ProductService

<PageTitle>Klavelvet</PageTitle>

<ProductList />

@code {
    [Parameter]
    public string? CateogryUrl { get; set; } = string.Empty;

    [Parameter]
    public string? SearchText { get; set; } = string.Empty;

    protected override async Task OnParametersSetAsync()
    {
        if (!string.IsNullOrEmpty(SearchText))
        {
            await ProductService.SearchProducts(SearchText);
        }
        else
        {
            await ProductService.GetProducts(CateogryUrl);
        }

    }
}
